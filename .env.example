# ============================================
# NOTIFICATIONS
# ============================================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ‚îÄ‚îÄ Internal Gateway (Unix socket ‚Äî zero TCP ports) ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
GATEWAY_ENABLED=true
LOCAL_NODE_ENABLED=true
# Browser WebChat (loopback only ‚Äî not reachable from outside)
WEBCHAT_HOST=127.0.0.1
WEBCHAT_PORT=8789
# Optional token: URL must include ?token=<value> to access the chat.
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(24))"
WEBCHAT_TOKEN=
# Set to true to also bind on the Tailscale IP (100.x.x.x) ‚Äî no SSH needed
WEBCHAT_TAILSCALE=false

# ‚îÄ‚îÄ Mobile Relay ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# Set to true when you have the Sable mobile app installed.
# Requires Tailscale (recommended) or Tor to reach from your phone.
MOBILE_RELAY_ENABLED=false
MOBILE_RELAY_HOST=127.0.0.1
MOBILE_RELAY_PORT=7891
# Leave blank to auto-generate a secret on first run (~/.opensable/mobile_secret.txt)
MOBILE_RELAY_SECRET=
# Enable if routing through a Tor hidden service
MOBILE_RELAY_TOR=false
# Enable if using Tailscale (prints Tailscale IP and QR code on startup)
MOBILE_RELAY_TAILSCALE=false
SMTP_FROM=